<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/style.css" />
        <title>Website: Shop</title>
    </head>

    <body class="bg-white text-gray-800 dark:text-gray-200">
        <!-- Navigation Bar -->
        <nav class="bg-gray-900 flex justify-between items-center p-5">
            <div id="logo" class="ml-3">
                <a href="/">
                    <img class="h-12 w-12" src="images/logo.png" alt="Logo" />
                </a>
            </div>
            <div id="menu">
                <ul class="flex space-x-5 text-gray-300">
                    <a href="/"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            Home
                        </li></a
                    >
                    <a href="/shop"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            Shop
                        </li></a
                    >
                    <a href="/about"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            About
                        </li></a
                    >
                    <a href="/contact"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            Contact
                        </li></a
                    >
                    <a href="/login"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            Login
                        </li></a
                    >
                </ul>
            </div>
        </nav>

        <section class="py-16">
            <div class="max-w-8xl mx-auto text-center ml-10 mr-10">
                <h2 class="text-3xl font-semibold text-gray-800">Our Shop</h2>
                <p class="mt-4 text-lg text-gray-600">
                    Explore our curated collection of top-quality products. Find
                    everything you need, from electronics to home essentials,
                    all in one place.
                </p>

                <hr class="border-t-2 border-gray-800 mt-20" />
                <!-- Product Cards -->
                <div
                    class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-7"
                >
                    <% products.forEach(product => { %>
                    <div
                        class="bg-gray-800 pt-1 pb-1 pr-1 pl-1 rounded-lg shadow-lg"
                    >
                        <div class="w-full h-64 mx-auto">
                            <img
                                class="w-full h-64 object-cover rounded-md border-6 border-yellow-400"
                                src="<%= product.image %>"
                                alt="<%= product.name %>"
                            />
                        </div>
                        <h3 class="mt-5 text-xl font-semibold text-white">
                            <%= product.name %>
                        </h3>
                        <p class="mt-2 text-gray-300 text-sm">
                            <%= product.description %>
                        </p>
                        <div class="mt-4 text-xl font-semibold text-white">
                            $<%= product.price %>
                        </div>
                    </div>

                    <!-- a button to buy the product -->
                    <!-- <div>
                        <a href="/buy/:<% product.id %>">
                            <p class="p-5 bg-slate-300">Buy</p>
                        </a>
                    </div> -->
                    <% }) %>
                </div>
            </div>
        </section>

        <!-- Footer Section -->
        <footer class="bg-gray-900 text-white py-8 mt-16">
            <div class="max-w-7xl mx-auto text-center">
                <p>&copy; 2024 Your Company. All Rights Reserved.</p>
                <p class="mt-2">
                    Follow us on
                    <a href="#" class="text-blue-400 hover:text-blue-500"
                        >Twitter</a
                    >,
                    <a href="#" class="text-blue-400 hover:text-blue-500"
                        >Facebook</a
                    >,
                    <a href="#" class="text-blue-400 hover:text-blue-500"
                        >Instagram</a
                    >.
                </p>
            </div>
        </footer>
    </body>
</html>
