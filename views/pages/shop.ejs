<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="css/style.css" />
        <title>Website: Shop</title>
    </head>

    <body class="bg-white text-gray-800 dark:text-gray-200">
        <!-- Navigation Bar -->
        <nav class="bg-gray-900 flex justify-between items-center p-5">
            <div id="logo" class="ml-3">
                <a href="/">
                    <img class="h-12 w-12" src="images/logo.png" alt="Logo" />
                </a>
            </div>
            <div id="menu">
                <ul class="flex space-x-5 text-gray-300">
                    <a href="/"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            Home
                        </li></a
                    >
                    <a href="/shop"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            Shop
                        </li></a
                    >
                    <a href="/about"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            About
                        </li></a
                    >
                    <a href="/contact"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            Contact
                        </li></a
                    >
                    <a href="/login"
                        ><li
                            class="m-2 p-4 hover:text-gray-900 hover:bg-gray-100 hover:font-bold rounded-lg transition-all duration-350 ease-in-out"
                        >
                            Login
                        </li></a
                    >
                </ul>
            </div>
        </nav>

        <!-- Shop Container -->
        <div class="max-w-7xl mx-auto py-8 px-5">
            <!-- Shop Title -->
            <h2 class="text-3xl font-semibold text-gray-800 text-center mb-6">
                Our Shop
            </h2>

            <!-- Grid for Products (up to 6 per row) -->
            <div
                class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 2xl:grid-cols-6 gap-6"
            >
                <% products.forEach(product => { %>
                <div class="bg-gray-400 p-6 rounded-lg shadow-lg w-full">
                    <div class="w-full h-40">
                        <img
                            class="w-full h-full object-cover rounded-md"
                            src="<%= product.image %>"
                            alt="<%= product.name %>"
                        />
                    </div>
                    <div class="mt-4">
                        <h3 class="text-xl font-semibold text-gray-800">
                            <%= product.name %>
                        </h3>
                        <p class="text-gray-200 mt-2 text-sm leading-tight">
                            <%= product.description %>
                        </p>
                        <div class="mt-4 flex justify-between items-center">
                            <span class="text-2xl font-semibold text-gray-900">
                                $<%= product.price %>
                            </span>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>

        <!-- Footer Section -->
        <footer class="bg-gray-900 text-white py-8 mt-16">
            <div class="max-w-7xl mx-auto text-center">
                <p>&copy; 2024 Your Company. All Rights Reserved.</p>
                <p class="mt-2">
                    Follow us on
                    <a href="#" class="text-blue-400 hover:text-blue-500"
                        >Twitter</a
                    >,
                    <a href="#" class="text-blue-400 hover:text-blue-500"
                        >Facebook</a
                    >,
                    <a href="#" class="text-blue-400 hover:text-blue-500"
                        >Instagram</a
                    >.
                </p>
            </div>
        </footer>
    </body>
</html>
